#!/bin/sh
echo "Running pre-push"

protected_branches=('master' 'main' 'dev'); current_branch=$(git rev-parse --abbrev-ref HEAD); for branch in "${protected_branches[@]}"; do if [ "$current_branch" = "$branch" ]; then echo 'ðŸš« Direct push to '$branch' is not allowed! Please use a pull request.'; exit 1; fi; done